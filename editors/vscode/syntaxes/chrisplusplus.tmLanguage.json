{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "chrisplusplus",
  "scopeName": "source.chr",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#storage" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.chrisplusplus",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.chrisplusplus",
          "match": "//.*$"
        },
        {
          "name": "comment.block.chrisplusplus",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.chrisplusplus",
          "match": "(@)(\\w+)",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.chrisplusplus" },
            "2": { "name": "entity.name.annotation.chrisplusplus" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.chrisplusplus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.chrisplusplus",
              "match": "\\\\[\"\\\\nrt0]"
            },
            {
              "name": "meta.interpolation.chrisplusplus",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.chrisplusplus" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.chrisplusplus" }
              },
              "patterns": [
                { "include": "source.chr" }
              ]
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.chrisplusplus",
          "match": "'(\\\\.|[^'\\\\])'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.chrisplusplus",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.chrisplusplus",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.chrisplusplus",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.chrisplusplus",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.chrisplusplus",
          "match": "\\b(if|else|for|while|return|break|continue|match|in|throw|try|catch|finally)\\b"
        },
        {
          "name": "keyword.declaration.chrisplusplus",
          "match": "\\b(func|var|let|class|interface|enum|import|package|extern|operator)\\b"
        },
        {
          "name": "keyword.modifier.chrisplusplus",
          "match": "\\b(public|private|protected|async|await|io|compute|unsafe|shared)\\b"
        },
        {
          "name": "keyword.other.chrisplusplus",
          "match": "\\b(new|this)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.chrisplusplus",
          "match": "\\b(func|var|let|class|interface|enum)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.chrisplusplus",
          "match": "\\b(Int|Int8|Int16|Int32|UInt|UInt8|UInt16|UInt32|Float|Float32|Bool|String|Char|Void)\\b"
        },
        {
          "name": "support.type.collection.chrisplusplus",
          "match": "\\b(Array|Map|Set|List|Future|Channel|Ptr)\\b"
        },
        {
          "name": "support.type.other.chrisplusplus",
          "match": "\\b(Error|TypeInfo|Result|Option)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.chrisplusplus",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.nil.chrisplusplus",
          "match": "\\b(nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.chrisplusplus",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.range.chrisplusplus",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.comparison.chrisplusplus",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.chrisplusplus",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.compound.chrisplusplus",
          "match": "(\\+=|-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.assignment.chrisplusplus",
          "match": "="
        },
        {
          "name": "keyword.operator.nullcoalesce.chrisplusplus",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.optionalchain.chrisplusplus",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.arithmetic.chrisplusplus",
          "match": "[+\\-*/%]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.chrisplusplus",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.function.chrisplusplus" },
            "2": { "name": "entity.name.function.chrisplusplus" }
          }
        },
        {
          "name": "meta.function.call.chrisplusplus",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.chrisplusplus" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "meta.class.definition.chrisplusplus",
          "match": "\\b(class|interface|enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.chrisplusplus" },
            "2": { "name": "entity.name.type.chrisplusplus" }
          }
        },
        {
          "name": "variable.other.chrisplusplus",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.chrisplusplus",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
