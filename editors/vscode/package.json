{
  "name": "chrisplusplus",
  "displayName": "chrisplusplus",
  "description": "Language support for chrisplusplus (.chr) â€” syntax highlighting, diagnostics, completions, hover, go-to-definition",
  "version": "0.1.0",
  "publisher": "chrisplusplus",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:chrisplusplus"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chrisplusplus",
        "aliases": [
          "chrisplusplus",
          "chr"
        ],
        "extensions": [
          ".chr"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/chr-light.png",
          "dark": "./icons/chr-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "chrisplusplus",
        "scopeName": "source.chr",
        "path": "./syntaxes/chrisplusplus.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "chrisplusplus",
      "properties": {
        "chrisplusplus.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to the chris-lsp binary. If empty, searches PATH and common build locations."
        },
        "chrisplusplus.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
